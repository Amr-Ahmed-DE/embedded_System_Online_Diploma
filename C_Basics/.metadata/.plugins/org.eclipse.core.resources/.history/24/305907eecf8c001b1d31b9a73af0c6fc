#include <stdio.h>

#define ADD +
#define Sub -
#define Mul *
#define div /

int main(void)
{
	char x;
	int a, b;
	while(1)
	{
		printf("please enter Operation Add, Sub, Mul or div :");
		fflush(stdin);
		fflush(stdout);
		scanf("%c", &x);
		printf("please enter two Operands = ");
		fflush(stdin);
		fflush(stdout);
		scanf("%f %f", &a, &b);

		Calculator(a, b, x);
	}
}
void Calculator(float FirstNumber, float SecondNumber, char operation)
{
  float sum = 0;
  switch (operation)
  {
  case 'ADD' :
  {
	  sum = FirstNumber + SecondNumber;
	  printf("Result = %f", sum);
  }
  }
}
