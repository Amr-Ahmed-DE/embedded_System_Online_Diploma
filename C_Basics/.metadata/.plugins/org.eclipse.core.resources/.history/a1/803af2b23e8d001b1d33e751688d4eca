#include <stdio.h>

#define ADD (+)
#define Sub '-'
#define multiplication '*'
#define division '/'

void Calculator(float FirstNumber, float SecondNumber, char operation);

int main(void)
{
	char x;
	float a, b;
	while(1)
	{
		printf("please enter Operation Add, Sub, multiplication or division :");
		fflush(stdin);
		fflush(stdout);
		scanf("%c", &x);
		printf("please enter two Operands = ");
		fflush(stdin);
		fflush(stdout);
		scanf("%f %f", &a, &b);

		Calculator(a, b, x);
	}
}
void Calculator(float FirstNumber, float SecondNumber, char operation)
{
	float sum = 0;

	switch (operation)
	{
	case ADD :
	{
		sum = FirstNumber + SecondNumber;
		printf("Result = %f", sum);
		break;
	}
	case Sub :
	{
		sum = FirstNumber - SecondNumber;
		printf("Result = %f", sum);
		break;
	}
	case multiplication :
		{
			sum = FirstNumber * SecondNumber;
			printf("Result = %f", sum);
			break;
		}
	case division :
		{
			sum = FirstNumber - SecondNumber;
			printf("Result = %f", sum);
			break;
		}
	}
}
